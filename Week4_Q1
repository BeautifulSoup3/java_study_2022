class TV {
    String brand;
    int year;
    int length;

    TV(String brand, int year, int length){
        this.brand = brand;
        this.year = year;
        this.length = length;
    }

    void show() {
        System.out.println(brand + "에서 만든 " + year + "년형 " + length + "인치 TV");
    }
}





public class Sample {
    public static void main(String[] args) {
        TV myTV = new TV("LG", 2017, 32);  // LG에서 만든 2017년 32인치
        myTV.show();
    }
}
